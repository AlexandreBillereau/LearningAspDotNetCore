@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Category</h1>

<table class="table table-bordered table table-striped" style="width:100%">
     <thead>
         <tr>
             <th>Category Name</th>
             <th>Display Order</th>
         </tr>
     </thead>
     <tbody>
         @foreach (var item in Model)
        {
            <tr>
                <td style="width:50%">
                    @item.Name
                </td>
                <td style="width:30%">
                    @item.DisaplayOrder
                </td>
            </tr>
        }
     </tbody>
</table>